{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "noEmit": false,
    "baseUrl": "./src",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
  ]
}