// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  name       String
  email      String @unique
  password   String
  created_at String
  updated_at String

  @@map("user")
}

model Product {
  id                      String                    @id @default(uuid())
  name                    String                    @unique
  description             String
  inputs                  InputsOnProducts[]
  categoryProductSchedule CategoryProductSchedule[]
  created_at              String
  updated_at              String

  @@map("product")
}

model InputsOnProducts {
  id              String  @id @default(uuid())
  productId       String
  inputId         String
  name            String
  unitPrice       Float
  measurementUnit String
  grammage        Float
  input           Input   @relation(fields: [inputId], references: [id])
  product         Product @relation(fields: [productId], references: [id])
  created_at      String
  updated_at      String

  @@map("inputsOnProducts")
}

model Input {
  id              String             @id @default(uuid())
  name            String
  code            String @unique
  unitPrice       Float
  group           String
  measurementUnit String
  products        InputsOnProducts[]
  created_at      String
  updated_at      String

  @@map("input")
}

model Menu {
  id         String    @id @default(uuid())
  name       String
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  created_at String
  updated_at String

  @@map("menu")
}

model CategoryProductSchedule {
  id         String   @id @default(uuid())
  categoryId String
  productId  String
  weekDay    Weekday  @default(SEGUNDA)
  category   Category @relation(fields: [categoryId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
  created_at String
  updated_at String

  @@map("categoryProductSchedule")
}

model Category {
  id                      String                    @id @default(uuid())
  name                    String
  categoryProductSchedule CategoryProductSchedule[]
  menu                    Menu[]
  created_at              String
  updated_at              String

  @@map("category")
}

enum Weekday {
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
  DOMINGO
}
