// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("account")
}

model Product {
  id                      String                    @id @default(uuid())
  name                    String                    @unique
  description             String
  inputs                  InputsOnProducts[]
  categoryProductSchedule CategoryProductSchedule[]

  @@map("product")
}

model InputsOnProducts {
  id        String  @id @default(uuid())
  inputId   String
  productId String
  input     Input   @relation(fields: [inputId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@map("inputsOnProducts")
}

model Input {
  id              String             @id @default(uuid())
  name            String
  code            String
  unitPrice       Float
  group           String
  measurementUnit String
  grammage        Float
  products        InputsOnProducts[]

  @@map("input")
}

model Menu {
  id         String    @id @default(uuid())
  name       String
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  @@map("menu")
}

model CategoryProductSchedule {
  id         String   @id @default(uuid())
  categoryId String
  productId  String
  weekDay    Weekday  @default(SEGUNDA)
  category   Category @relation(fields: [categoryId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@map("categoryProductSchedule")
}

model Category {
  id                      String                    @id @default(uuid())
  name                    String
  categoryProductSchedule CategoryProductSchedule[]
  menu                    Menu[]

  @@map("category")
}

enum Weekday {
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
  DOMINGO
}
